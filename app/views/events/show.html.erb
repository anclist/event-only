<h1> <%= @event.name %></h1>
<p> Date: <%= @event.date.strftime("%A, %h %d, %Y") %> </p>
<p> Created at: <%= @event.created_at.strftime("%A, %h %d, %Y") %> </p>
<p> Updated at: <%= @event.updated_at.strftime("%A, %h %d, %Y") %> </p>


<%= link_to "Back to all events", events_path %>
| <%= link_to "Edit", edit_event_path %>
| <%= link_to 'Delete', event_path(@event), method: :delete, data: {confirm: "Are you sure you want to delete the event '#{@event.name}'? This cannot be undone!"} %>
